{
  "manifest_version": 3,
  "name": "Whisper Network - File Anonymizer",
  "version": "1.0.0",
  "description": "Automatically anonymize files before sending to AI chatbots",
  "author": "Sylvain JOLY, NANO by NXO",

  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],

  "host_permissions": [
    "https://chat.openai.com/*",
    "https://claude.ai/*",
    "https://copilot.microsoft.com/*",
    "https://gemini.google.com/*",
    "https://poe.com/*",
    "https://chat.mistral.ai/*",
    "https://mistral.ai/*",
    "http://localhost:8001/*"
  ],

  "background": {
    "service_worker": "background.js"
  },

  "content_scripts": [
    {
      "matches": [
        "https://chat.openai.com/*",
        "https://claude.ai/*",
        "https://copilot.microsoft.com/*",
        "https://gemini.google.com/*",
        "https://poe.com/*",
        "https://chat.mistral.ai/*",
        "https://mistral.ai/*"
      ],
      "js": ["content.js"],
      "run_at": "document_start"
    }
  ],

  "action": {
    "default_popup": "popup-file.html",
    "default_title": "Whisper Network - File Anonymizer"
  },

  "icons": {
    "16": "icons/whisper-16.png",
    "32": "icons/whisper-32.png",
    "48": "icons/whisper-48.png",
    "128": "icons/whisper-128.png"
  }
}
