# Whisper Network - Configuration Environment Variables
# Copy this file to .env and fill in your values

# API Configuration
API_HOST=127.0.0.1
API_PORT=8000
API_RELOAD=True

# Security - CORS Origins (comma-separated list)
# Development: http://localhost:3000,http://localhost:8080
# Production: https://chat.openai.com,https://claude.ai,https://chat.mistral.ai
CORS_ORIGINS=http://localhost:3000,https://chat.openai.com,https://chatgpt.com,https://claude.ai,https://chat.mistral.ai,https://gemini.google.com,https://copilot.microsoft.com

# Security - API Key (generate with: openssl rand -hex 32)
# Leave empty to disable API key authentication (not recommended for production)
API_KEY=

# Security - Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/whisper_network.log

# Redis Cache (optional)
REDIS_ENABLED=False
REDIS_URL=redis://localhost:6379

# SpaCy Models
SPACY_FR_MODEL=fr_core_news_sm
SPACY_EN_MODEL=en_core_web_sm
